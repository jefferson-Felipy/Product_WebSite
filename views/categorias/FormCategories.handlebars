{{#each erros}}
    <div class="erros">
        <h3>{{texto}}</h3>
        <hr style="margin:10px;">
    </div>
{{/each}}

<section class="container_form_categories">
    <h2>Cadastro de Categorias</h2>
    <form action="/createCategories" method="post">
        <label for="">Name:
            <input type="text" name="name" placeholder="example: E-books">
        </label>

        <label for="">Slug:
            <input type="text" name="slug" placeholder="Eample: Books">
        </label>

        <button class="btnCreateCategories">Criar Categoria</button>
    </form>

    <a href="/FormProdutos">Cancelar</a>
</section>